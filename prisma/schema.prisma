generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

enum Role {
  PACIENTE
  PROFESIONAL
  RECEPCIONISTA
  ADMINISTRADOR
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum TimeSlotStatus {
  AVAILABLE
  BOOKED
  BREAK
}

enum InsuranceStatus {
  ACTIVE
  INACTIVE
  UNKNOWN
}

enum PrescriptionItemType {
  MEDICATION
  PROCEDURE
}

enum AllergySeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AttachmentKind {
  XRAY
  LAB
  DOCUMENT
}

model Specialty {
  id                         String                @id @default(uuid())
  name                       String                @unique
  defaultSlotDurationMinutes Int
  active                     Boolean               @default(true)
  professionals              ProfessionalProfile[]
  services                   Service[]
}

model User {
  id           String               @id @default(uuid()) @db.Uuid
  email        String               @unique
  passwordHash String
  role         Role
  name         String
  lastName     String
  privacyMode  Boolean              @default(false)
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  professional ProfessionalProfile?
  patient      PatientProfile?
  notifications Notification[]
  resetTokens  PasswordResetToken[]
  clinicalNotes ClinicalNote[]
}

model ProfessionalProfile {
  id                  String        @id @default(uuid())
  userId              String        @unique @db.Uuid
  specialtyId         String
  slotDurationMinutes Int?
  active              Boolean       @default(true)
  user                User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  specialty           Specialty     @relation(fields: [specialtyId], references: [id], onDelete: Restrict)
  timeSlots           TimeSlot[]
  appointments        Appointment[]
  availabilityRules   AvailabilityRule[]
  availabilityExceptions AvailabilityException[]
}

model PatientProfile {
  id                String          @id @default(uuid())
  userId            String          @unique @db.Uuid
  phone             String?
  documentId        String?
  dateOfBirth       DateTime?
  gender            String?
  insuranceProvider String?
  insuranceStatus   InsuranceStatus?
  address           String?
  city              String?
  avatarUrl         String?
  patientCode       String?         @unique
  active            Boolean         @default(true)
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  appointments      Appointment[]
  allergies         MedicalAllergy[]
  attachments       Attachment[]
}

model Service {
  id              String         @id @default(uuid())
  name            String         @unique
  description     String?
  priceCents      Int
  durationMinutes Int?
  active          Boolean        @default(true)
  specialtyId     String?
  specialty       Specialty?     @relation(fields: [specialtyId], references: [id], onDelete: SetNull)
  appointments    Appointment[]

  @@index([active])
  @@index([specialtyId])
}

model TimeSlot {
  id             String              @id @default(uuid())
  professionalId String
  startAt        DateTime
  endAt          DateTime
  status         TimeSlotStatus      @default(AVAILABLE)
  professional   ProfessionalProfile @relation(fields: [professionalId], references: [id], onDelete: Cascade)
  appointment    Appointment?

  @@index([professionalId])
  @@index([startAt])
}

model Appointment {
  id             String              @id @default(uuid())
  patientId      String
  professionalId String
  timeSlotId     String              @unique
  serviceId      String
  serviceName    String?
  servicePriceCents Int?
  reason         String
  notes          String?
  status         AppointmentStatus   @default(PENDING)
  checkedInAt    DateTime?
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt
  patient        PatientProfile      @relation(fields: [patientId], references: [id], onDelete: Restrict)
  professional   ProfessionalProfile @relation(fields: [professionalId], references: [id], onDelete: Restrict)
  timeSlot       TimeSlot            @relation(fields: [timeSlotId], references: [id], onDelete: Restrict)
  service        Service             @relation(fields: [serviceId], references: [id], onDelete: Restrict)
  clinicalNotes  ClinicalNote[]
  prescription   Prescription?
  attachments    Attachment[]

  @@index([patientId])
  @@index([professionalId])
  @@index([serviceId])
}

model ClinicalNote {
  id             String      @id @default(uuid())
  appointmentId  String
  authorUserId   String      @db.Uuid
  content        String
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  appointment    Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  author         User        @relation(fields: [authorUserId], references: [id], onDelete: Cascade)

  @@index([appointmentId])
  @@index([authorUserId])
}

model Prescription {
  id            String             @id @default(uuid())
  appointmentId String             @unique
  createdAt     DateTime           @default(now())
  appointment   Appointment        @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  items         PrescriptionItem[]
}

model PrescriptionItem {
  id             String               @id @default(uuid())
  prescriptionId String
  type           PrescriptionItemType
  name           String
  dosage         String?
  frequency      String?
  instructions   String?
  createdAt      DateTime             @default(now())
  prescription   Prescription         @relation(fields: [prescriptionId], references: [id], onDelete: Cascade)

  @@index([prescriptionId])
}

model MedicalAllergy {
  id         String          @id @default(uuid())
  patientId  String
  substance  String
  severity   AllergySeverity
  notes      String?
  createdAt  DateTime        @default(now())
  patient    PatientProfile  @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([patientId])
}

model Attachment {
  id            String         @id @default(uuid())
  appointmentId String?
  patientId     String?
  kind          AttachmentKind
  filename      String
  mimeType      String?
  size          Int?
  storageKey    String?
  url           String?
  dataUrl       String?
  createdAt     DateTime       @default(now())
  appointment   Appointment?   @relation(fields: [appointmentId], references: [id], onDelete: SetNull)
  patient       PatientProfile? @relation(fields: [patientId], references: [id], onDelete: SetNull)

  @@index([appointmentId])
  @@index([patientId])
  @@index([kind])
}

model AvailabilityRule {
  id             String               @id @default(uuid())
  professionalId String
  rrule          String
  startTime      String
  endTime        String
  timezone       String
  active         Boolean              @default(true)
  createdAt      DateTime             @default(now())
  professional   ProfessionalProfile  @relation(fields: [professionalId], references: [id], onDelete: Cascade)

  @@index([professionalId])
}

model AvailabilityException {
  id             String               @id @default(uuid())
  professionalId String
  date           DateTime
  isAvailable    Boolean              @default(false)
  startTime      String?
  endTime        String?
  reason         String?
  createdAt      DateTime             @default(now())
  professional   ProfessionalProfile  @relation(fields: [professionalId], references: [id], onDelete: Cascade)

  @@index([professionalId])
  @@index([date])
}

model Notification {
  id         String   @id @default(uuid())
  userId     String   @db.Uuid
  type       String
  title      String
  body       String?
  entityType String?
  entityId   String?
  readAt     DateTime?
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([readAt])
  @@index([createdAt])
}

model Campaign {
  id          String   @id @default(uuid())
  title       String
  description String?
  imageUrl    String
  ctaText     String?
  ctaUrl      String?
  startAt     DateTime
  endAt       DateTime
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  @@index([active])
  @@index([startAt])
  @@index([endAt])
}

model PasswordResetToken {
  id        String    @id @default(uuid())
  userId    String    @db.Uuid
  tokenHash String    @unique
  expiresAt DateTime
  createdAt DateTime  @default(now())
  usedAt    DateTime?
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}
